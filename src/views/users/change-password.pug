extends ../base 

block content 
    if errorMessage
        span errorMessage
    form(method="POST")
        input(name="oldPassword", type="password", required, placeholder="Old Password", maxlength=20)
        input(name="newPassword", type="password", required, placeholder="New Password", maxlength=20)
        input(name="newPasswordConfirmation", type="password", required, placeholder="Confirm New Password", maxlength=20)
        input(type="submit", value="Submit")